<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<GridPane id="back"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="it.polimi.ingsw.PSP42.view.ControllerWelcomeScene"
          prefHeight="672.0"
          prefWidth="1200.0">

    <!--Inner GridPane-->
    <GridPane GridPane.rowIndex="1"
              GridPane.columnIndex="1">

        <TextField id ="textfield"
                   alignment="CENTER"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="1"
                   text="Type your NickName then press Enter"
                   onAction="#saveNickname"
                   onMouseClicked="#deleteText"/>

        <ProgressIndicator id = "progressIndicator"
                           GridPane.rowIndex="1"
                           GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.valignment="CENTER"/>

        <Label id = "progressLabel"
               text="Waiting Game Initialisation..."
               GridPane.rowIndex="1"
               GridPane.columnIndex="3" GridPane.halignment="LEFT" GridPane.valignment="CENTER"/>

        <rowConstraints>
            <RowConstraints percentHeight="10"/>
            <RowConstraints percentHeight="80"/>
            <RowConstraints percentHeight="10"/>
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints percentWidth="17"/>
            <ColumnConstraints percentWidth="36"/>
            <ColumnConstraints percentWidth="2"/>
            <ColumnConstraints percentWidth="45"/>
        </columnConstraints>
    </GridPane>

    <rowConstraints>
        <RowConstraints percentHeight="75"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="15"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints percentWidth="30"/>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="20"/>
    </columnConstraints>

    <stylesheets>
        <URL value="@../css/WelcomeScene.css" />
    </stylesheets>

</GridPane>
