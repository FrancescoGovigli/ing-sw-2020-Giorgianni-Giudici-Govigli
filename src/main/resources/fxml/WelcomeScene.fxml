<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" prefHeight="600" prefWidth="400" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.PSP42.view.ControllerWelcomeScene">

    <!--<gridLinesVisible>true</gridLinesVisible>-->

    <GridPane id="grid-pane" alignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">

        <!--<gridLinesVisible>true</gridLinesVisible>-->

        <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Text id="welcome-text" text="SANTORINI" textAlignment="CENTER" />
        </HBox>

        <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <Label text="Welcome in Santorini" />
        </HBox>

        <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3">
            <Label alignment="CENTER" text="Insert your name:" />
        </HBox>

        <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="4">
            <TextField id="text-field" fx:id="textField" maxHeight="10" maxWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        </HBox>

        <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="5">
            <Button id="play-button" fx:id="submitButton" onAction="#goToWaitingScene" prefHeight="200" prefWidth="200" />
        </HBox>

        <columnConstraints>
            <ColumnConstraints minWidth="10.0" percentWidth="100.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10" percentHeight="10" prefHeight="50" /> <!-- Row 0 -->
            <RowConstraints minHeight="10" percentHeight="10" prefHeight="50" /> <!-- Row 1 welcome-text -->
            <RowConstraints minHeight="10" percentHeight="10" prefHeight="50" /> <!-- Row 2 label welcome santorini-->
            <RowConstraints minHeight="10" percentHeight="10" prefHeight="50" /> <!-- Row 3 label insert your name-->
            <RowConstraints minHeight="10" percentHeight="10" prefHeight="50" /> <!-- Row 4 text_field -->
            <RowConstraints minHeight="10" percentHeight="18" prefHeight="50" /> <!-- Row 5 button -->
            <RowConstraints minHeight="10" percentHeight="2" prefHeight="50" /> <!-- Row 6 -->
            <RowConstraints minHeight="10" percentHeight="10" prefHeight="50" /> <!-- Row 7 -->
            <RowConstraints minHeight="10" percentHeight="10" prefHeight="50" /> <!-- Row 8 -->
            <RowConstraints minHeight="10" percentHeight="10" prefHeight="50" /> <!-- Row 9 -->
        </rowConstraints>
    </GridPane>

    <columnConstraints>
        <ColumnConstraints minWidth="10.0" percentWidth="12.0" prefWidth="100.0" />
        <ColumnConstraints minWidth="10.0" percentWidth="78.0" prefWidth="100.0" />
        <ColumnConstraints minWidth="10.0" percentWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10" percentHeight="13" prefHeight="100" />
        <RowConstraints minHeight="10" percentHeight="74" prefHeight="0.0" />
        <RowConstraints minHeight="10" percentHeight="13" prefHeight="100" />
    </rowConstraints>

    <stylesheets>
        <URL value="@../css/WelcomeScene.css" />
    </stylesheets>

</GridPane>
