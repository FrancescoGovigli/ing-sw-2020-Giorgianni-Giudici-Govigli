<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane id="back"
          xmlns="http://javafx.com/javafx/10.0.2-internal"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="it.polimi.ingsw.PSP42.client.clientView.ControllerWelcomeScene">

   <GridPane GridPane.columnIndex="0" GridPane.rowIndex="1" focusTraversable="true">

      <Pane fx:id="statusPane"
            prefHeight="215.0" prefWidth="348.0"
            GridPane.rowIndex="1" GridPane.columnIndex="1"
            GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>

      <Label id="statusLabel"
             fx:id="statusLabel"
             alignment="CENTER"
             prefHeight="17.0" prefWidth="234.0"
             GridPane.rowIndex="1" GridPane.columnIndex="1"
             GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>

      <TextField id="textfield"
                 fx:id="textFieldIP"
                 alignment="CENTER"
                 editable="false"
                 onMouseClicked="#deleteText"
                 prefHeight="47.0" prefWidth="306.0"
                 text="Insert Host IP Address"
                 GridPane.columnIndex="1" GridPane.rowIndex="3"
                 GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>

      <rowConstraints>
         <RowConstraints percentHeight="63" />
         <RowConstraints percentHeight="15" />
         <RowConstraints percentHeight="5" />
         <RowConstraints percentHeight="10" />
      </rowConstraints>
      <columnConstraints>
         <ColumnConstraints percentWidth="37.5" />
         <ColumnConstraints percentWidth="25" />
         <ColumnConstraints percentWidth="37.5" />
      </columnConstraints>
   </GridPane>

   <GridPane GridPane.columnIndex="0" GridPane.rowIndex="2">

      <Button id="playButton"
              onAction="#goToWaitingScene"
              alignment="CENTER"
              prefHeight="70.0" prefWidth="180.0"
              text="CONNECT &amp; PLAY"
              textAlignment="CENTER"
              GridPane.rowIndex="1" GridPane.columnIndex="1"
              GridPane.halignment="CENTER" GridPane.valignment="CENTER" />

      <rowConstraints>
         <RowConstraints percentHeight="5" />
         <RowConstraints percentHeight="45" />
         <RowConstraints percentHeight="50" />
      </rowConstraints>
      <columnConstraints>
         <ColumnConstraints percentWidth="40" />
         <ColumnConstraints percentWidth="20" />
         <ColumnConstraints percentWidth="40" />
      </columnConstraints>
   </GridPane>

   <rowConstraints>
      <RowConstraints percentHeight="10" />
      <RowConstraints percentHeight="60" />
      <RowConstraints percentHeight="30" />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints percentWidth="100" />
   </columnConstraints>

   <stylesheets>
      <URL value="@../css/WelcomeScene.css" />
   </stylesheets>
</GridPane>
