<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<GridPane id="back"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="it.polimi.ingsw.PSP42.view.ControllerWelcomeScene"
          prefHeight="672.0" prefWidth="1200.0">

   <Button id="playButton"
           fx:id="playButton"
           onAction="#goToWaitingScene"
           GridPane.rowIndex="1"
           GridPane.columnIndex="1"
           GridPane.valignment="CENTER"
           GridPane.halignment="CENTER"
           alignment="CENTER"
           prefHeight="80.0"
           prefWidth="182.0"
           text="PLAY"
           textAlignment="CENTER"/>

   <rowConstraints>
      <RowConstraints percentHeight="75"/>
      <RowConstraints percentHeight="10"/>
      <RowConstraints percentHeight="15"/>
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints percentWidth="40"/>
      <ColumnConstraints percentWidth="20"/>
      <ColumnConstraints percentWidth="40"/>
   </columnConstraints>

   <stylesheets>
      <URL value="@../css/WelcomeScene.css" />
   </stylesheets>
</GridPane>
