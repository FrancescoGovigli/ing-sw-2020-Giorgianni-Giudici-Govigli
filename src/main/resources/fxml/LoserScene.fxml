<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane id="back"
          xmlns="http://javafx.com/javafx/10.0.2-internal"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="it.polimi.ingsw.PSP42.client.clientView.ControllerDisconnectionScene">

    <Pane id="trumpetsDefeatLeft"
          GridPane.rowIndex="1" GridPane.columnIndex="0"
          GridPane.valignment="CENTER" GridPane.halignment="CENTER"/>

    <Pane id="trumpetsDefeatRight"
          GridPane.rowIndex="1" GridPane.columnIndex="2"
          GridPane.valignment="CENTER" GridPane.halignment="CENTER"/>

    <GridPane GridPane.rowIndex="2" GridPane.columnIndex="1">

        <Pane id="messagePane"
              GridPane.rowIndex="1" GridPane.columnIndex="1"
              GridPane.valignment="CENTER" GridPane.halignment="CENTER"/>

        <Label id="message"
               fx:id="disconnectionLabel"
               GridPane.rowIndex="1" GridPane.columnIndex="1"
               GridPane.valignment="CENTER" GridPane.halignment="CENTER"/>

        <Button id="quitButton"
                onMouseClicked="#exitApp"
                prefHeight="54.0" prefWidth="87.0"
                text="QUIT"
                GridPane.rowIndex="2" GridPane.columnIndex="1"
                GridPane.valignment="CENTER" GridPane.halignment="CENTER"/>

        <rowConstraints>
            <RowConstraints percentHeight="45.0"/>
            <RowConstraints percentHeight="10.0"/>
            <RowConstraints percentHeight="30.0"/>
            <RowConstraints percentHeight="15.0"/>
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints percentWidth="12.0"/>
            <ColumnConstraints percentWidth="76.0"/>
            <ColumnConstraints percentWidth="12.0"/>
        </columnConstraints>
    </GridPane>

    <rowConstraints>
        <RowConstraints percentHeight="7.0"/>
        <RowConstraints percentHeight="15.0"/>
        <RowConstraints percentHeight="65.0"/>
        <RowConstraints percentHeight="13.0"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints percentWidth="29.5"/>
        <ColumnConstraints percentWidth="41.1"/>
        <ColumnConstraints percentWidth="29.4"/>
    </columnConstraints>

    <stylesheets>
        <URL value="@../css/DisconnectionScene.css"/>
    </stylesheets>
</GridPane>
