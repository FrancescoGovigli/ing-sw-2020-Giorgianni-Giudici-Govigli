<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<GridPane id="back"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="it.polimi.ingsw.PSP42.view.ControllerWelcomeScene"
          prefHeight="672.0"
          prefWidth="1200.0">

    <!--Grid Pane for Nickname-->
    <GridPane GridPane.rowIndex="1"
              GridPane.columnIndex="1" >
        <GridPane
              GridPane.rowIndex="0"
              GridPane.columnIndex="0"
              GridPane.valignment="CENTER"
              GridPane.halignment="CENTER">
            <TextField id="textfield"
                       onAction="#saveNickname"
                       onMouseClicked="#deleteText"
                       prefHeight="52.0"
                       prefWidth="193.0"
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="1"
                       alignment="CENTER"
                       text="Type your NickName then press Enter" >
            </TextField>
            <rowConstraints>
                <RowConstraints percentHeight="100"/>
            </rowConstraints>
            <columnConstraints>
                <ColumnConstraints percentWidth="20"/>
                <ColumnConstraints percentWidth="60"/>
                <ColumnConstraints percentWidth="20"/>
            </columnConstraints>
        </GridPane>

        <!--GridPane for Choose number of players-->
        <GridPane GridPane.columnIndex="0" GridPane.rowIndex="1">
            <GridPane id="chooseField"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="1">
                <Label id="labelPlayers"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="1"
                       GridPane.valignment="CENTER"
                       GridPane.halignment="CENTER"
                       textAlignment="CENTER"
                       text="Choose"/>
                <Label id="labelPlayers"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="2"
                       GridPane.valignment="CENTER"
                       GridPane.halignment="CENTER"
                       textAlignment="CENTER"
                       text="number of"/>
                <Label id="labelPlayers"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="3"
                       GridPane.valignment="CENTER"
                       GridPane.halignment="CENTER"
                       textAlignment="CENTER"
                       text="players"/>
                <rowConstraints>
                    <RowConstraints percentHeight="10"/>
                    <RowConstraints percentHeight="26.5"/>
                    <RowConstraints percentHeight="27"/>
                    <RowConstraints percentHeight="26.5"/>
                    <RowConstraints percentHeight="10"/>
                </rowConstraints>
                <columnConstraints>
                    <ColumnConstraints percentWidth="100"/>
                </columnConstraints>
            </GridPane>

            <rowConstraints>
                <RowConstraints percentHeight="8"/>
                <RowConstraints percentHeight="84"/>
                <RowConstraints percentHeight="8"/>
            </rowConstraints>
            <columnConstraints>
                <ColumnConstraints percentWidth="10"/>
                <ColumnConstraints percentWidth="80"/>
                <ColumnConstraints percentWidth="10"/>
            </columnConstraints>
        </GridPane>

        <rowConstraints>
            <RowConstraints percentHeight="30"/>
            <RowConstraints percentHeight="70"/>
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints percentWidth="100"/>
        </columnConstraints>
    </GridPane>

    <!--GridPane for Buttons-->
    <GridPane GridPane.rowIndex="2"
              GridPane.columnIndex="1" >
        <Button id="chooseButton"
                fx:id="choose1"
                mnemonicParsing="false"
                onMouseClicked="#twoPlayerChoose"
                prefHeight="88.0"
                prefWidth="80.0"
                text="2"
                GridPane.rowIndex="0"
                GridPane.columnIndex="1"
                GridPane.valignment="CENTER"
                GridPane.halignment="CENTER"/>
        <Button id="chooseButton"
                fx:id="choose2"
                mnemonicParsing="false"
                onMouseClicked="#threePlayerChoose"
                prefHeight="88.0"
                prefWidth="80.0"
                text="3"
                GridPane.rowIndex="0"
                GridPane.columnIndex="2"
                GridPane.valignment="CENTER"
                GridPane.halignment="CENTER"/>
        <rowConstraints>
            <RowConstraints percentHeight="100"/>
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints percentWidth="15"/>
            <ColumnConstraints percentWidth="35"/>
            <ColumnConstraints percentWidth="35"/>
            <ColumnConstraints percentWidth="15"/>
        </columnConstraints>
    </GridPane>

    <rowConstraints>
        <RowConstraints percentHeight="32"/>
        <RowConstraints percentHeight="40"/>
        <RowConstraints percentHeight="20"/>
        <RowConstraints percentHeight="8"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints percentWidth="34"/>
        <ColumnConstraints percentWidth="33"/>
        <ColumnConstraints percentWidth="33"/>
    </columnConstraints>

    <stylesheets>
        <URL value="@../css/WelcomeScene.css" />
    </stylesheets>
</GridPane>
