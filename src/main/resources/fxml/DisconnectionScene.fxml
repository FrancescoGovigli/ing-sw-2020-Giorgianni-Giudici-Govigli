<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane id="back" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="it.polimi.ingsw.PSP42.client.clientView.ControllerDisconnectionScene">

    <GridPane GridPane.rowIndex="2" GridPane.columnIndex="1">

        <Pane id="messagePane"
              GridPane.rowIndex="1" GridPane.columnIndex="1"
              GridPane.valignment="CENTER" GridPane.halignment="CENTER"/>

        <Label id="message"
               fx:id="disconnectionLabel"
               GridPane.rowIndex="1" GridPane.columnIndex="1"
               GridPane.valignment="CENTER" GridPane.halignment="CENTER"/>

        <Button id="quitButton"
                onMouseClicked="#exitApp"
                prefHeight="54.0" prefWidth="87.0"
                GridPane.rowIndex="2" GridPane.columnIndex="1"
                GridPane.valignment="CENTER" GridPane.halignment="CENTER"
                text="QUIT"/>

        <rowConstraints>
            <RowConstraints percentHeight="50.0"/>
            <RowConstraints percentHeight="10.0"/>
            <RowConstraints percentHeight="20.0"/>
            <RowConstraints percentHeight="20.0"/>
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints percentWidth="8.0"/>
            <ColumnConstraints percentWidth="84.0"/>
            <ColumnConstraints percentWidth="8.0"/>
        </columnConstraints>
    </GridPane>

    <rowConstraints>
        <RowConstraints percentHeight="7.0"/>
        <RowConstraints percentHeight="15.0"/>
        <RowConstraints percentHeight="65.0"/>
        <RowConstraints percentHeight="13.0"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints percentWidth="29.5"/>
        <ColumnConstraints percentWidth="41.1"/>
        <ColumnConstraints percentWidth="29.4"/>
    </columnConstraints>

    <stylesheets>
        <URL value="@../css/DisconnectionScene.css"/>
    </stylesheets>
</GridPane>
